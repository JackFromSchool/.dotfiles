# Set config dir
export ZDOTDIR="$HOME/.config/zsh"

# Default editor
export EDITOR="nvim"
export VISUAL="nvim"

# ZSH Options
export HISTFILE="$HOME/.cache/zsh/history"
export HISTSIZE=10000
export SAVEHIST=10000

# Man Pages
export MANPAGER="nvim +Man!"

# fzf

export FZF_DEFAULT_OPTS="--height 60% \
   --border sharp \
   --layout reverse"
