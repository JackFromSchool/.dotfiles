{
   "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
   "final_space": true,
   "version": 3,
   "blocks": [
      {
         "type": "prompt",
         "alignment": "left",
         "segments": [
            {
               "type": "session",
               "style": "powerline",
               "leading_powerline_symbol": "",
               "powerline_symbol": "",
               "foreground": "{{colors.on_primary.default.hex}}",
               "background": "{{colors.primary.default.hex}}",
               "template": " {{"{{"}}if .SSHSession{{"}}"}} {{"{{"}} end {{"}}"}} {{"{{"}} .UserName {{"}}"}}@{{"{{"}} .HostName {{"}}"}}"
            },
            {
               "type": "path",
               "style": "powerline",
               "powerline_symbol": "",
               "foreground": "{{colors.on_primary.default.hex}}",
               "background": "{{colors.primary.default.hex | set_lightness: -7.5}}",
               "properties": {
                  "style": "folder"
               }
            },
            {
               "type": "git",
               "style": "powerline",
               "powerline_symbol": "",
               "foreground": "{{colors.on_primary.default.hex}}",
               "background": "{{colors.primary.default.hex | set_lightness: -15.0}}",
               "template": "{{"{{"}} .UpstreamIcon {{"}}"}}{{"{{"}} .HEAD {{"}}"}}",
               "properties": {
                  "fetch_upstream_icon": true,
                  "source": "cli"
               }
            }
         ]
      }
   ]
}

